<main>
  <nav class='text-start table'>
    {{#with navigation}}
      <span class='nav'>
        <ul class='nav-item'>
          {{#each links}}

            <a href='{{href}}'>{{text}}</a>

          {{/each}}
          <span class='nav-item'>Disabled</span>
        </ul>
      </span>
    {{/with}}
  </nav>

  <nav class='breadcrumb my-5'>
    {{#each breadcrumb}}
      {{#if url}}
        <div class='breadcrumb-item'>
          <a href='{{url}}'>{{name}}</a>
        </div>
      {{else}}
        <div class='breadcrumb-item'>
          <span>{{name}}</span>
        </div>
      {{/if}}
    {{/each}}
  </nav>
</main>

<section>
  <div class='col-12'>
    <h2>{{header}}</h2>
    <div class='row my-4'>
      {{#each sortBlock}}
        <div class='col-3'>
          <select class='form-select'>
            <option selected>{{placeholder}}</option>
            {{#each options}}
              <option value='{{value}}'>{{text}}</option>
            {{/each}}
          </select>
        </div>
      {{/each}}
    </div>
  </div>
</section>

<section>
  <section class="col-12">
    <section class="row">
      <section class='col-4 card card-body'>
        <div class='row'>
          <div>
            {{#with filterBlock}}
              <div>
                {{#with sellers}}
                  <div>{{title}}</div>
  
                  <div>
                    {{#each list}}
                      <div class='form-check'>
                        <label
                          class='form-check-label'
                        >{{value}}</label>
                        <input
                          type='checkbox'
                          class='form-check-input'
                        />
                      </div>
                    {{/each}}
                  </div>
                {{/with}}
              </div>
              <hr />
  
              <div>
                {{#with brands}}
                  <div>
                    <label
                      for='id-1'
                      class='form-label'
                    >{{title}}</label>
                    <div>
                      {{#with input}}
                        <input
                          name='id-1'
                          class='form-control'
                          placeholder='{{placeholder}}'
                        />
                      {{/with}}
                    </div>
                  </div>
  
                  <div class='form-check mt-3'>
                    {{#each options}}
  
                      <div>
                        <label
                          class='form-check-label'
                        >{{value}}</label>
                        <input
                          type='checkbox'
                          class='form-check-input'
                        />
                      </div>
                    {{/each}}
                  </div>
                {{/with}}
              </div>
              <hr />
  
              <div>
                {{#with price}}
  
                  <label
                    for='customRange'
                    class='form-label'
                  >{{title}}</label>
  
                  <div class='input-group mb-3'>
                    <input
                      id='customRange'
                      type='text'
                      class='form-control'
                      placeholder='Від'
                      value='{{range.from}}'
                    />
                    <span class='input-group-text'>-</span>
                    <input
                      id='customRange'
                      type='text'
                      class='form-control'
                      placeholder='До'
                      value='{{range.to}}'
                    />
  
                    <a
                      href='{{button.link}}'
                      class='btn btn-outline-secondary'
                    >{{button.text}}</a>
                  </div>
  
                {{/with}}
              </div>
              <hr />
  
              <div>
                {{#each filterList}}
                  <div>
                    <div class="form-label">{{title}}</div>
  
                    <div class="form-check">
                      {{#each options}}
                        <div class="my-1">
                          <input type="checkbox" class="me-1">{{value}}</input>
                        </div>
  
                      {{/each}}
                    </div>
                    
                  </div>
                  {{#unless @last}}
                    <hr />
                  {{/unless}}
                {{/each}}
              </div>
  
            {{/with}}
          </div>
        </div>
      </section>
  
      <section class='col-8'>
        {{> catalogItem}}
      </section>

      <section class="ps-0 my-5">
        <div class="card text-center">
          <div class="card-body text-bg-success">
            {{#with service}}
              <h2>{{title}}</h2>
              <p>{{description}}</p>
              <div>
                {{#each buttons}}
                  <a href="{{link}}" type="button" class="btn btn-primary">{{text}}</a>
                {{/each}}
              </div>
            {{/with}}
          </div>
        </div>
      </section>
      <hr class="mb-3">

    </section>
  </section>
</section>

<footer>
  <div class='container ps-0'>
    <div class='row'>
      {{#each footer}}

        <div class='col-2 ps-0'>
          <div class='nav'>
            {{#each this}}

              <div>
                {{#if @last}}
                  <div
                    class='nav-item text-nowrap disabled'
                  >
                    <a
                      href='{{link}}'
                      class='ps-0 pe-5 me-5 nav-link disabled'
                    >{{text}}</a>
                  </div>
                {{else}}
                  <div class='nav-item text-nowrap'>
                    <a
                      href='{{link}}'
                      class='ps-0 pe-5 me-5 nav-link'
                    >{{text}}</a>
                  </div>
                {{/if}}
              </div>

            {{/each}}
          </div>
        </div>

      {{/each}}
    </div>
  </div>
</footer>