<nav class='card card-body p-3 mb-4'>
  {{#with navigation}}
    <div class='container'>
      <div class='row'>
        <div class='col-12'>
          <div class='nav'>
            {{#each links}}

              <div class='nav-item'>
                {{#if @last}}
                  <a
                    href='{{href}}'
                    class='nav-link disabled'
                  >{{text}}</a>
                {{else}}
                  <a
                    href='{{href}}'
                    class='nav-link'
                  >{{text}}</a>
                {{/if}}
              </div>
            {{/each}}
          </div>
        </div>

      </div>
    </div>
  {{/with}}
</nav>
<section>
  <div class='my-5'>
    <h1>{{header}}</h1>
  </div>
</section>

<section>
  <section class='col-12'>
    <section class='row'>
      <section class='col-8'>

        {{#with contacts_data}}
          <h2 class='mt-5 mb-3'>{{title}}</h2>

          <div>
            {{#each buttons}}
              {{#if isPrimary}}
                <button
                  type='button'
                  class='btn btn-primary'
                >{{text}}</button>
              {{else}}{{#isOutline}}
                  <button
                    type='button'
                    class='btn btn-outline-primary'
                  >{{text}}</button>
                {{/isOutline}}{{/if}}
            {{/each}}
          </div>

          <div class='row'>
            {{#with form}}
              <div class='col-12 g-4'>
                {{#with input}}
                  <div class='row'>
                    <div class='col-6'>
                      {{#with surname}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>

                    <div class='col-6'>
                      {{#with name}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>
                  </div>

                  <div class='row mt-3'>
                    <div class='col-6'>
                      {{#with phone}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>

                    <div class='col-6'>
                      {{#with email}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>
                  </div>
                {{/with}}
              </div>

              <hr class='my-5' />

              <div>
                {{#each switch}}
                  {{#if isActive}}
                    <div
                      class='form-check form-switch mb-3'
                    >
                      <label
                        class='form-check-label active'
                        for='id'
                      >{{text}}</label>
                      <input
                        type='checkbox'
                        class='form-check-input'
                        id='id'
                      />
                    </div>
                  {{else}}
                    <div
                      class='form-check form-switch mb-3'
                    >
                      <label
                        class='form-check-label'
                        for='id'
                      >{{text}}</label>
                      <input
                        type='checkbox'
                        class='form-check-input'
                        id='id'
                      />
                    </div>
                  {{/if}}
                {{/each}}
                <hr class='my-5' />
              </div>
            {{/with}}
          </div>
        {{/with}}

      </section>

      <section class='col-4'>
        <div class='card card-body'>
          {{#each action_block}}
            {{#if isSuccess}}
              <button
                class='btn btn-success my-1'
              >{{text}}</button>
            {{else}}{{#isDanger}}
                <button
                  class='btn btn-danger my-1'
                >{{text}}</button>
              {{else}}{{#isInfo}}
                  <button
                    class='btn btn-info my-1'
                  >{{text}}</button>
                {{/isInfo}}{{/isDanger}}{{/if}}
          {{/each}}
        </div>

        <div class='card card-body mt-3'>
          {{#with total}}
            <h2>{{title}}</h2>

            <div>
              {{#each item_list}}
                <div>{{name}}: {{price}}</div>
              {{/each}}
            </div>
            <hr />

            <div>
              {{#each additional_info}}
                <div>{{text}}: {{value}}</div>
              {{/each}}
            </div>
            <hr />

            <div>
              {{#with total_price}}
                <div>{{text}}: {{value}}</div>
              {{/with}}
            </div>
            <hr />

            <div>
              {{#each button}}
                {{#if isPrimary}}
                  <button
                    class='btn btn-primary mb-2'
                  >{{text}}</button>
                {{else}}{{#isOutline}}
                    <button
                      class='btn btn-outline-primary'
                    >{{text}}</button>
                  {{/isOutline}}{{/if}}
              {{/each}}
            </div>
          {{/with}}
        </div>
      </section>

      <section class='col-8'>
        <div>
          {{#with delivery}}
            <h2>{{title}}</h2>

            <div class='col-12 card card-body'>
              <div class='row'>
                {{#each select}}
                  <div class='col-6'>
                    <div>
                      <label
                        for='id'
                        class='form-label'
                      >{{label}}</label>
                      <select
                        name='id'
                        class='form-select form-select-lg'
                      >
                        <option
                          selected
                        >{{placeholder}}</option>
                        {{#each options}}
                          <option value='{{value}}'>
                            {{text}}</option>
                        {{/each}}
                      </select>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>

            <div class='mt-4'>
              {{#each delivery_type}}
                <div class='form-check'>
                  <label
                    class='form-check-label'
                    for='id'
                  >{{type}}</label>
                  <input
                    name='id'
                    type='radio'
                    class='form-check-input'
                  />
                </div>
              {{/each}}
            </div>

            <hr class='my-5' />

            <div>
              {{#with payment}}
                <h2 class='mb-4'>{{title}}</h2>

                <div class='form-check'>
                  {{#each list}}
                    {{#if this}}
                      <label
                        for='id-1'
                        class='form-check-label'
                      >{{type}}</label>
                      <input
                        name='id-1'
                        type='radio'
                        class='form-check-input'
                      />
                      <p
                        class='form-text'
                      >{{description}}</p>
                    {{else}}
                      <label
                        for='id-1'
                        class='form-check-label'
                      >{{type}}</label>
                      <input
                        name='id-1'
                        type='radio'
                        class='form-check-input'
                      />
                    {{/if}}
                  {{/each}}
                </div>
              {{/with}}
            </div>
            <hr class='my-5' />

            <div class='row'>
              {{#with contact}}
                <h2>{{title}}</h2>

                <div class='col-12 g-4'>

                  <div class='row'>
                    <div class='col-6'>
                      {{#with surname}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>

                    <div class='col-6'>
                      {{#with name}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>
                  </div>

                  <div class='row mt-3'>
                    <div class='col-6'>
                      {{#with phone}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>

                    <div class='col-6'>
                      {{#with email}}
                        <div>
                          <label
                            class='form-label'
                          >{{label}}</label>
                          <input
                            class='form-control'
                            placeholder='{{placeholder}}'
                          />
                          <div
                            class='form-text'
                          >{{caption}}</div>
                        </div>
                      {{/with}}
                    </div>
                  </div>

                </div>
              {{/with}}
            </div>
            <hr class='my-5' />

            <div>
              {{#with coment}}
                <label
                  for='id-2'
                  class='form-label'
                >{{label}}</label>
                <input
                  name='id-2'
                  class='form-control'
                  placeholder='{{placeholder}}'
                />
              {{/with}}
            </div>
          {{/with}}
        </div>
        <hr class='my-5' />

        <section>
          <div>
            {{#with coupon}}
              <h2>{{title}}</h2>

              <div>
                {{#with select}}
                  <div>
                    {{#with availabel_coupon}}
                      <label
                        for='select1'
                        class='form-label'
                      >{{label}}</label>
                      <select
                        name='select1'
                        class='form-select form-select-lg'
                      >
                        <option
                          selected
                        >{{placeholder}}</option>
                        {{#each options}}
                          <option
                            value='{{value}}'
                          >{{text}}</option>
                        {{/each}}
                      </select>
                    {{/with}}
                  </div>
                  <div class='my-3'>
                    {{#with friend_coupon}}
                      <label
                        for='select1'
                        class='form-label'
                      >{{label}}</label>
                      <select
                        name='select1'
                        class='form-select'
                      >
                        <option
                          selected
                        >{{placeholder}}</option>
                        {{#each options}}
                          <option
                            value='{{value}}'
                          >{{text}}</option>
                        {{/each}}
                      </select>
                    {{/with}}
                  </div>
                {{/with}}
              </div>

              <div>
                {{#with add}}
                  <div>
                    {{#with friend}}
                      <div>
                        <label
                          for='input1'
                          class='form-label'
                        >{{label}}</label>
                        <input
                          class='form-control form-control-lg'
                          name='input1'
                          placeholder='{{placeholder}}'
                        />
                        <div
                          class='form-text'
                        >{{caption}}</div>
                      </div>
                    {{/with}}
                  </div>

                  <div class='mt-3'>
                    {{#with colleague}}
                      <div>
                        <label
                          for='input2'
                          class='form-label'
                        >{{label}}</label>
                        <input
                          class='form-control'
                          name='input2'
                          placeholder='{{placeholder}}'
                        />
                        <div
                          class='form-text'
                        >{{caption}}</div>
                      </div>
                    {{/with}}
                  </div>
                {{/with}}
              </div>
            {{/with}}
          </div>
        </section>
        <hr class='my-5' />

        <section>
          <div>
            {{#with quiz}}
              <h2 class='mb-3'>{{title}}</h2>

              <div>
                {{#with preference}}
                  <div class='form-label'>{{title}}</div>
                  <div class='form-check'>
                    {{#each options}}

                      <div>
                        <label
                          for='preference'
                          class='form-check-label'
                        >{{this}}</label>
                        <input
                          name='preference'
                          type='radio'
                          class='form-check-input'
                        />
                      </div>

                    {{/each}}
                  </div>
                {{/with}}
              </div>

              <div class='my-3'>
                {{#with your_expirience}}
                  <div>
                    <label
                      for='expirience'
                      class='form-label'
                    >{{label}}</label>
                    <input
                      name='expirience'
                      type='text'
                      class='form-control'
                    />
                  </div>
                {{/with}}
              </div>

              <div class='my-3'>
                {{#with purchase_frequency}}
                  <div>
                    <label
                      for='frequency'
                      class='form-label'
                    >{{label}}</label>
                    <select
                      name='frequency'
                      class='form-select'
                    >
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}"
                      name='frequency'
                      type='text'
                    />{{text}}</option>
                    {{/each}}
                    </select>
                  </div>
                {{/with}}
              </div>

              <div class="mb-5">
                {{#with factors}}
                  <div class="form-label">{{title}}</div>
                  <div class="form-check">
                    {{#each options}}
                      <div class="my-1">
                        <input name="factors" type="checkbox">
                        <label class="form-check-label" for="factors">{{this}}</label>
                      </div>
                    {{/each}}
                  </div>
                {{/with}}
              </div>
            {{/with}}
          </div>
        </section>

      </section>

    </section>
  </section>
</section>
<hr class="my-5">

<footer>
  <div class='container'>
    <div class='row'>
      {{#each footer}}

        <div class='col-2'>
          <div class='nav'>
            {{#each this}}

              <div>
                {{#if @last}}
                  <div
                    class='nav-item text-nowrap disabled'
                  >
                    <a
                      href='{{link}}'
                      class='pe-5 me-5 nav-link disabled'
                    >{{text}}</a>
                  </div>
                {{else}}
                  <div class='nav-item text-nowrap'>
                    <a
                      href='{{link}}'
                      class='pe-5 me-5 nav-link'
                    >{{text}}</a>
                  </div>
                {{/if}}
              </div>

            {{/each}}
          </div>
        </div>

      {{/each}}
    </div>
  </div>
</footer>