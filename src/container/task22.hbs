<header class='text-center'>
  {{#with page_header}}
    <h1>{{title}}</h1>
    <p class='text-uppercase'>{{description}}</p>
  {{/with}}
</header>
<hr />

<section>
  <div>
    {{#with section}}

      {{#with about_us}}
        <div class='text-end'>
          <div class='display-1'>{{title_list.main}}</div>
          <h2>{{title_list.sub}}</h2>
        </div>
        <br />
        <button class='btn btn-outline-info'>{{button.text}}
        </button>
      {{/with}}
      <br />
      <br />
      <br />
      <div>
        <div>
          {{#with advantage}}
            <div class='display-5'>{{title}}</div>
            <br />
            <div class='card card-body'>
              {{#with efficiency}}
                <div>
                  <div class='display-4'>{{title}}</div>
                  <br />
                  <h6>{{sub_title}}</h6>
                  <br />
                  <p>{{description}}</p>
                </div>
                <br />

                <div>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                </div>
              {{/with}}
            </div>
            <br />

            <div class='card card-body'>
              {{#with innovation}}
                <div class='text-center'>
                  <div class='display-4'>{{title}}</div>
                  <br />
                  <h6>{{sub_title}}</h6>
                  <br />
                  <p>{{description}}</p>
                </div>
                <br />

                <div>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                </div>
              {{/with}}
            </div>
            <br />

            <div class='card card-body'>
              {{#with collaboration}}
                <div class='text-end'>
                  <div class='display-4'>{{title}}</div>
                  <br />
                  <h6>{{sub_title}}</h6>
                  <br />
                  <p>{{description}}</p>
                </div>
                <br />

                <div>
                  <button
                    class='btn btn-outline-warning'
                  >{{button}}</button>
                </div>
              {{/with}}
            </div>
          {{/with}}
        </div>
      </div>

      <div>
        <div>
          {{#with agreement}}
            <div class='display-5'>{{title}}</div>
            <br />
            <div class='card card-body'>
              {{#with info}}
                <div>
                  <h5>{{sub_title}}</h5>
                </div>
                <br />
                <div class='card card-body'>
                  <details>
                    <p>{{detail.text}}</p>
                    <button
                      class='btn btn-success'
                    >{{detail.button}}</button>
                  </details>
                </div>
              {{/with}}
            </div>

          {{/with}}
        </div>
      </div>

    {{/with}}
  </div>
</section>