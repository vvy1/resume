{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>
        
          {{> title data="Work history" big=true }}
        
        <div>
          <ul>
            {{#each works}}
              <li class="mb-3">
                <div>{{position}}</div>

                <br>

                <div>
                  {{duration.from}} - 
                  {{#if duration.to}} 
                    {{duration.to}} 
                  {{else}} 
                    (досі працюю) 
                  {{/if}}
                </div>

                <br>

                <div>
                  {{#if company.url}}
                    {{> link text=company.name href=company.url blank=true noLine=true }}
                  {{else}}
                    <b>{{company.name}}</b>
                  {{/if}}
                </div>

                <br>
                <br>

                <div>
                  <strong>Projects ({{projectAmount}})</strong>
                </div>

                <br>

                <ul>
                  {{#each projects}}
                    <li>
                      <div>{{> link text=name href=url blank=true noLine=true }}</div>

                      

                      <div class="my-3">
                        <p>{{about}}</p>
                      </div>

                      

                      <div>
                        <em>Project stacks ({{stackAmount}})</em>
                      </div>

                      

                      <div class="my-3">
                        <ul>
                          {{#each stacks}}
                           <li>
                             {{name}}
                           </li>
                          {{/each}}
                        </ul>
                      </div>
                      
                      

                      <div>
                        <em>Project awards ({{awardAmount}})</em>
                      </div>

                        

                      <div class="my-3">
                        <ul>
                          {{#each awards}}
                            <li>
                              {{name}}
                            </li>
                          {{/each}}
                        </ul>
                      </div>

                    </li>
                  {{/each}}
                </ul>

              </li>

              
            {{/each}}  
          </ul>
        </div>
      </section>

    </main>
  {{/with}}
</div>

